generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model Case {
  id          String   @id @default(uuid())
  title       String
  description String
  status      Status   @default(SUBMITTED)
  submittedBy User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  audit       Audit[]
  files       File[]
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  role     Role
  avatar   String?
  cases    Case[]
}

model Audit {
  id        String   @id @default(uuid())
  action    String
  timestamp DateTime @default(now())
  userId    String
  userName  String
  details   String
  case      Case     @relation(fields: [caseId], references: [id])
  caseId    String
}

model File {
  id        String   @id @default(uuid())
  name      String
  url       String
  case      Case     @relation(fields: [caseId], references: [id])
  caseId    String
  createdAt DateTime @default(now())
}

enum Status {
  SUBMITTED
  REVIEW
  APPROVED
  DROPPED
}

enum Role {
  POLICE_OFFICER
  ADMIN
  SUPERVISOR
}